@using FlowerShopConracts.ViewModels

@model List<MessageInfoViewModel>
@{
    ViewData["Title"] = "MessageInfo";
}

<div class="text-center">
    <h1 class="display-4">Письма</h1>
</div>


<div class="text-center">
    @{
        if (Model == null)
        {
            <h3 class="display-4">Ящик пуст</h3>
            return;
        }

        <p>
            <a asp-action="Create">Создать заказ</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Номер
                    </th>
                    <th>
                        Отправитель
                    </th>
                    <th>
                        Дата письма
                    </th>
                    <th>
                        Заголовк
                    </th>
                    <th>
                        Текст
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.MessageId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SenderName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateDelivery)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Body)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
